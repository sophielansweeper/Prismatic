{
  "name": "@prismatic-io/docs",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "docusaurus": "docusaurus",
    "start": "npm run generate:components && docusaurus start --host 127.0.0.1 --port 3057",
    "build": "npm run format && npm run lint && npm run generate:components && docusaurus build --out-dir build/docs 2>&1 && cp ./redirect.html build/index.html",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve --dir build/docs/",
    "lint": "eslint --cache --quiet --ext .js,.jsx,.ts,.tsx src",
    "lint-fix": "eslint --cache --fix --quiet --ext .js,.jsx,.ts,.tsx src",
    "check-format": "npm run check:md && npm run check:js && npm run check:yaml && npm run check:dictionary",
    "check:dictionary": "export tmpspell=$(mktemp) && cp .spelling ${tmpspell} && awk '{ print tolower($0) }' ${tmpspell} | sed '/^$/d' | LC_ALL=C sort --unique --output ${tmpspell} && diff .spelling ${tmpspell}",
    "check:js": "prettier --check 'src/**/*.{js,jsx,ts,tsx}' 'sidebars/**/*.{js,json}' './*.{js,json}'",
    "check:md": "prettier --check 'docs/**/*.{md,mdx}'",
    "check:yaml": "prettier --check '**/*.yaml'",
    "format": "npm run lint-fix && npm run format:md && npm run format:js && npm run format:yaml && npm run format:dictionary",
    "format-changed": "prettier --loglevel error --write $(git status -s | grep -v '^\\sD' | cut -c4- | grep '.md' | xargs)",
    "format:dictionary": "awk '{ print tolower($0) }' .spelling | sed '/^$/d' | LC_ALL=C sort --unique --output .spelling",
    "format:js": "prettier --loglevel error --write 'src/**/*.{js,jsx,ts,tsx}' 'sidebars/**/*.{js,json}' './*.{js,json}'",
    "format:md": "prettier --loglevel error --write 'docs/**/*.{md,mdx}'",
    "format:yaml": "prettier --loglevel error --write '**/*.yaml'",
    "typecheck": "tsc",
    "generate:components": "docusaurus components-to-docs && npm run format:md",
    "check:links": "npm run build && linkinator build/. --config linkinator.config.json"
  },
  "dependencies": {
    "@docusaurus/core": "2.4.1",
    "@docusaurus/plugin-client-redirects": "2.4.1",
    "@docusaurus/preset-classic": "2.4.1",
    "@emotion/react": "11.11.1",
    "@emotion/styled": "11.11.0",
    "@mdx-js/react": "^1.6.22",
    "@mui/icons-material": "^5.13.7",
    "@mui/material": "^5.13.7",
    "@segment/snippet": "4.15.3",
    "clsx": "1.2.1",
    "dateformat": "^5.0.3",
    "jimp": "^0.22.12",
    "prism-react-renderer": "^1.3.5",
    "querystring": "^0.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-modal-image": "^2.6.0",
    "react-super-responsive-table": "^5.2.1"
  },
  "devDependencies": {
    "@docusaurus/eslint-plugin": "^2.4.1",
    "@docusaurus/module-type-aliases": "2.4.1",
    "@tsconfig/docusaurus": "^2.0.0",
    "@types/fs-extra": "11.0.1",
    "@types/lodash": "4.14.195",
    "@types/react": "17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "^8.44.0",
    "eslint-config-react-app": "^7.0.1",
    "fs-extra": "11.1.1",
    "handlebars": "^4.7.7",
    "linkinator": "^5.0.1",
    "lodash": "^4.17.21",
    "netlify-cli": "15.9.1",
    "prettier": "^2.8.7",
    "typescript": "^4.7.4"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "tabWidth": 2
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@docusaurus/recommended",
      "react-app"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "env": {
      "browser": true,
      "node": true
    }
  },
  "engines": {
    "node": ">=16.14"
  }
}
